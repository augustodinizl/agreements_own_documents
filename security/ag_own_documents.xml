<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_agreement_documents">
            <field name="name">Agreement Documents</field>
            <field name="description">Helps you handle your Vendor by salespersons.</field>
            <field name="sequence">3</field>
        </record>
        <record id="own_agreement_documents" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="module_agreement_documents"/>
            <field name="comment">The user will have access to to see his/her own customers.</field>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="own_agreement_documents_rule" model="ir.rule">
            <field name="model_id" ref="agreement.model_agreement"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('agreement_own_documents.own_agreement_documents'))]"/>
        </record>
        <record id="group_all_documents_admin" model="res.groups">
            <field name="name">User: All Documents</field>
            <field name="category_id" ref="module_agreement_documents"/>
            <field name="implied_ids" eval="[(4, ref('base.user_admin'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">The user will have access to to see his/her own customers.</field>
        </record>
        <record id="sales_res_partner_id" model="ir.rule">
            <field name="name">User: All Documents</field>
            <field name="model_id" ref="agreement.model_agreement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('agreement_own_documents.group_all_documents_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>